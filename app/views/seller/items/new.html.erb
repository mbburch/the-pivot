<div class="container">
  <%= render partial: "layouts/flash" %>
  <%= form_for :item, url: "/#{@seller.username}/items",
                      html: { multipart: true,
                              class: "form-horizontal center" } do |f| %>
    <div class="form-group col-md-12">
      <%= f.label :title, class: "control-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label :description, class: "control-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label :store, class: "control-label" %>
      <%= f.collection_select :store_id, @seller.stores.all, :id, :title, { prompt: nil }, { class: "form-control" } %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label :category, class: "control-label" %>
      <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: nil }, { class: "form-control" } %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label :image, class: "control-label" %>
      <%= f.file_field :avatar, class: "form_control" %>
    </div>
    <%= f.submit "Create Item" %>
  <% end %>
</div>
