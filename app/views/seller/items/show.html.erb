<div class="container">
  <%= render partial: "layouts/flash" %>
  <div class="col-md-12">
    <div class="show-item">
      <%= image_tag @item.avatar.url %>
      <div class="caption-full">
          <h5 class="pull-right"><a href="#"><%= @item.title %></a>
          <p><%= @item.description %></p></h5>
          <h6><%= "Starting Price: #{number_to_currency(@item.starting_price)}" %></h6>
          <h6><%= "Current Bid: #{number_to_currency(@item.current_bid)}" %></h6>
          <%= render "/bids/new.html.erb" %>
      </div>
    </div>
  </div>
</div>