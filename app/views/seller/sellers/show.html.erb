<div class="container">
  <div class="row">
    <h1>Welcome, <%= current_user.username.titleize %></h1>
  </div>

  <ul class="collection">
    <% current_user.stores.each do |store| %>
      <li class="collection-item <%= store.title.parameterize %>">
        <div class="row">
        <h3><%= link_to store.title, store_items_path(store.slug) %></h3>
        </div>
        <div class="row">
          <%= link_to "Edit", "#", {:class => "waves-effect waves-light btn right"} %>
          <%= link_to "Delete", "#", {:class => "waves-effect waves-light btn right red"} %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= link_to "Add New Store", "#", {:class => "waves-effect waves-light btn-large"} %>
</div>
