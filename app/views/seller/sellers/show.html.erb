<div class="container">
  <div class="row">
    <h1>Welcome, <%= current_user.username.titleize %></h1>
    <%= link_to "Edit My Profile", edit_path, {:class => "waves-effect waves-light btn medium"} %>
    <%= link_to "Add New Store", new_store_path, {:class => "waves-effect waves-light btn medium"} %>
    <%= link_to "Create an Auction", new_seller_auction_path, {:class => "waves-effect waves-light btn medium"} %>
  </div>

  <ul class="collection">
    <% current_user.stores.each do |store| %>
      <li class="collection-item <%= store.title.parameterize %>">
        <div class="row">
        <h3><%= link_to store.title, seller_path(store: store.slug) %></h3>
        </div>
        <div class="row">
          <%= link_to "Edit", edit_store_path(store), :class => "waves-effect waves-light btn right" %>
          <%= link_to "Delete", store_path(store),:method => :delete,:class => "waves-effect waves-light btn right red"%>
        </div>
      </li>
    <% end %>
  </ul>
</div>
