<div class="container">
  <h1 class="store-title"><%= @store.title.titleize %></h1>
  <h2><%= @store.user.full_name %></h2>
  <div class="row">
    <div class="row items">
      <% @items.each do |item| %>
        <%= render partial: "/layouts/tiny_item",
                  locals: { item: item, mode: :add, path: request.path } %>
      <% end %>
    </div>
  </div>
</div>
