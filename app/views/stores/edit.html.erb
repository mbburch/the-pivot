<%= flash[:notice] %>

<div class="container">
    <%= form_for @store, url: store_path(@store),
                      method: :patch,
                        html: { multipart: true,
                       class: "form-horizontal center" } do |f| %>
    <div class="form-group col-md-12">
      <%= f.label "Change your Store Name", class: "control-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label "Change your Store Description", class: "control-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <%= hidden_field_tag :user_id, current_user.id %>
    <%= f.submit "Edit Store"%>
  <% end %>
</div>
