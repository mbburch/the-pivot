<div class="col-sm-4">
  <div class="thumbnail">
    <%= image_tag item.avatar.url %>
    <div class="caption">
      <h4 class="pull-right"><%= number_to_currency(item.price) %></h4>
      <h4><%= link_to item.title, item_path(item.id) %></h4>
      <p><%= item.description %></p>
    </div>
  </div>
</div>