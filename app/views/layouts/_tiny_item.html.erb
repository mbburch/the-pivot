<div class="col-sm-4">
  <div class="thumbnail">
    <%= image_tag item.avatar.url %>
    <div class="caption">
      <h4 class="pull-right"><%= number_to_currency(item.price) %></h4>
      <h4><%= link_to item.title, item_path(item.id) %></h4>
      <p><%= item.description %></p>
      <% if mode == :add %>
        <%= button_to "Add to Cart", cart_items_path(item_id: item.id,
                                                     path: path) %>
      <% elsif mode == :edit %>
        <%= link_to "Edit", edit_admin_item_path(item) %>
      <% end %>
    </div>
  </div>
</div>
