<% if current_user && (!current_user.admin? || !current_user.seller?) %>
  <li><%= link_to current_user.username, dashboard_path %></li>
  <li><%= link_to "Log Out", logout_path, method: :delete %></li>
<% elsif current_user && current_user.admin?%>
  <li><%= link_to current_user.username, admin_dashboard_path %></li>
  <li><%= link_to "Log Out", logout_path, method: :delete %></li>
<% elsif current_user && current_user.seller?%>
  <li><%= link_to current_user.username, seller_dashboard_path %></li>
  <li><%= link_to "Log Out", logout_path, method: :delete %></li>
<% end %>
